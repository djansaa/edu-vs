<Window x:Class="EduVS.Views.GenerateTestResultsWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Export Test Results" Height="900" Width="980"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="DisableWhenStarted" TargetType="Button">
            <Setter Property="IsEnabled" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsStarted}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnableWhenStarted" TargetType="Button">
            <Setter Property="IsEnabled" Value="False"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsStarted}" Value="True">
                    <Setter Property="IsEnabled" Value="True"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Export Test Results"
                   FontSize="24" FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- FILES + STUDENT IMPORT PREVIEW -->
            <GroupBox Header="Files" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- PDFs -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Checked PDFs:" FontWeight="Bold"/>
                        <Grid Margin="4,6,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ListBox Grid.Column="0" ItemsSource="{Binding SelectedPdfPaths}" Height="80"/>
                            <Button Grid.Column="1"
                                    Content="Browse PDFs…"
                                    Margin="8,0,0,0"
                                    Command="{Binding BrowsePdfsCommand}"
                                    Style="{StaticResource DisableWhenStarted}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Students source file -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Students file (CSV/Excel):" FontWeight="Bold"/>
                        <Grid Margin="4,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding StudentsFilePath}"
                                     IsReadOnly="True"/>
                            <Button Grid.Column="1"
                                    Content="Browse Students…"
                                    Margin="8,0,0,0"
                                    Command="{Binding BrowseStudentsFileCommand}"
                                    Style="{StaticResource DisableWhenStarted}"/>
                        </Grid>

                        <Button Content="Create new students"
                                Width="170"
                                Margin="4,8,0,0"
                                HorizontalAlignment="right"
                                Command="{Binding OpenCreateNewStudentsWindowCommand}"
                                Style="{StaticResource DisableWhenStarted}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- START + ABORT -->
            <Grid Grid.Row="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="START"
                            Width="120" Height="34"
                            Command="{Binding StartCommand}"
                            Style="{StaticResource DisableWhenStarted}"/>
                    <Button Content="ABORT"
                            Width="120" Height="34" Margin="12,0,0,0"
                            Command="{Binding AbortCommand}"
                            Style="{StaticResource EnableWhenStarted}"/>
                </StackPanel>
            </Grid>

            <!-- WORKSPACE -->
            <GroupBox Grid.Row="4" Header="Workspace" Padding="12">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
                        <TextBlock Text="Students:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ListBox Width="400" Height="100"
                                 ItemsSource="{Binding Students}"
                                 SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                      <Run Text="{Binding DisplayName, Mode=OneWay}"/>
                                      <Run Text="{Binding TestId, StringFormat= #{0}, TargetNullValue=''}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="Assign" Margin="12,0,0,0" Width="110"
                                Command="{Binding AssignCommand}"
                                Style="{StaticResource EnableWhenStarted}"/>
                    </StackPanel>
                </DockPanel>
            </GroupBox>

            <!-- TEST IDs + PREVIEW -->
            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Test IDs" Padding="12" Grid.Column="0">
                    <ListBox ItemsSource="{Binding Tests}"
                             SelectedItem="{Binding SelectedTest, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TestId}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>

                <GroupBox Header="Preview" Padding="12" Grid.Column="2">
                    <Border BorderBrush="#DDD" BorderThickness="1"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Image Source="{Binding SelectedTest.NameBoxBitmap}"
                               Stretch="Uniform"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                </GroupBox>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Export" Width="110" Height="32" Margin="0,12,0,0"
                    Command="{Binding ExportCommand}"
                    Style="{StaticResource EnableWhenStarted}"/>
        </StackPanel>
    </Grid>
</Window>
