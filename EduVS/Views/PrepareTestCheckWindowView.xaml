<Window x:Class="EduVS.Views.PrepareTestCheckWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduVS.Views"
        mc:Ignorable="d"
        Title="PrepareTestCheckWindowView" Height="500" Width="800">
    <Grid Margin="16" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Source PDF -->
        <GroupBox Header="Source PDF" Grid.Row="0" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding PdfPath}"
                         IsReadOnly="True"
                         VerticalContentAlignment="Center"
                         MinWidth="360"/>
                <Button Grid.Column="1" Content="Browse…"
                        Margin="8,0,0,0"
                        Width="100"
                        Command="{Binding BrowsePdfCommand}"/>
            </Grid>
        </GroupBox>

        <!-- spacing -->
        <Border Grid.Row="1"/>

        <!-- Output mode -->
        <GroupBox Header="Output mode" Grid.Row="2" Padding="12">
            <StackPanel>
                <RadioButton Content="Split output into separate PDFs by group (A.pdf, B.pdf)"
                             IsChecked="{Binding IsSplitByGroup, Mode=TwoWay}"/>
                <RadioButton Content="Merge output into a single PDF"
                             IsChecked="{Binding IsMergedSingle, Mode=TwoWay}"/>
            </StackPanel>
        </GroupBox>

        <!-- spacing -->
        <Border Grid.Row="3"/>

        <!-- Sorting -->
        <GroupBox Header="Page sorting in output" Grid.Row="4" Padding="12">
            <StackPanel>
                <RadioButton Content="Sort by page number (1, 1, 1, 2, 2, 2 ...)"
                             IsChecked="{Binding SortByPageNumber, Mode=TwoWay}"/>
                <RadioButton Content="Sort by test number (first page, second page, first page ...)"
                             IsChecked="{Binding SortByTestNumber, Mode=TwoWay}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Output PDFs" Grid.Row="5" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- PdfA -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="PDF A:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="0" Grid.Column="1"
                   Text="{Binding PdfPathA}"
                   IsReadOnly="True"
                   VerticalContentAlignment="Center"
                   MinWidth="360"/>
                <Button    Grid.Row="0" Grid.Column="2"
                   Content="Browse…"
                   Margin="8,0,0,0"
                   Width="100"
                   Command="{Binding BrowsePdfANewCommmand}"/>

                <!-- spacer -->
                <Border Grid.Row="1"/>

                <!-- PdfB (disabled when IsMergedSingle == true) -->
                <Grid Grid.Row="2" Grid.ColumnSpan="3">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMergedSingle}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="PDF B:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBox   Grid.Column="1"
                         Text="{Binding PdfPathB}"
                         IsReadOnly="True"
                         VerticalContentAlignment="Center"
                         MinWidth="360"/>
                    <Button    Grid.Column="2"
                         Content="Browse…"
                         Margin="8,0,0,0"
                         Width="100"
                         Command="{Binding BrowsePdfBNewCommmand}"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Footer -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Export" Width="110" Height="32" Margin="0,12,8,0"
                    IsDefault="True"
                    Command="{Binding ExportCommand}"/>
        </StackPanel>
    </Grid>
</Window>
